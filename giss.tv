#!/bin/bash

echo "=> Killing all pd-extended instances..."
killall pd-extended

echo "====================================================================="
echo "Streaming mounted:  http://$1:$2/$3"
echo "Playlist in: $4"
echo "====================================================================="
nohup /usr/local/bin/webcast -H $1 -p $2 -l $3 -m $4 -x $5 > /home/pi/.radio/live.log &

