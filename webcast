              "#X connect 11 2 9 0;",
              "#X connect 11 3 12 0;",
              "#X connect 11 4 3 0;",
              "#X connect 12 0 0 0;",
              "#X connect 13 0 0 0;")

cast_client = ("#N canvas 1 440 1278 358 10;",
               "#X obj 21 264 outlet~;",
               "#X msg 23 120 disconnect;",
               "#X obj 76 261 outlet~;",
               "#X obj 22 223 *~ 1;",
               "#X obj 63 224 *~ 1;",
               "#X obj 22 -13 inlet;",
               "#X obj 23 14 sel 0 1;",
               "#X msg 163 111 print;",
               "#X obj 22 190 oggamp~ 1 2 512;",
               "#X obj 191 227 print cast.client.simple~:;",
               "#X msg 193 204 connected;",
