              "#X msg 317 211 connect "+options.host+" "+options.listen+" "+options.port+" ;",
              "#X obj 36 188 outlet;",
              "#X connect 0 0 4 0;",
              "#X connect 0 0 14 0;",
              "#X connect 0 1 5 0;",
              "#X connect 1 0 0 0;",
